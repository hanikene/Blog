<% include ../partials/header %>
<div class="container mt-4">
    <div class='container mb-2 pt-4 pb-1 w-75 bg-light'>
        <form action="/blog/<%= blog._id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="content">Content</label>
                <textarea name="[comment][content]" class="form-control" id="content" rows="7"><%= comment.content%></textarea>
            </div>
            <div class='text-center mb-3'>
                <button class="btn btn-success">edit comment</button>
            </div>
        </form>
    </div>
</div>
<div class="container text-center">
    <a href="/blog/<%= blog._id %>"><span class="btn btn-primary mb-3">back to the post</span></a>
</div>

<% include ../partials/footer %>