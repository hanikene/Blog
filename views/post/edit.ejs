<% include ../partials/header %>

<div class="container mt-4">
    <div class='container mb-2 pt-4 pb-1 w-75 bg-light'>
        <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" class="form-control" id="title" value="<%= blog.title%>">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input type="text" name="blog[image]" class="form-control" id="image" value="<%= blog.image%>">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea name="blog[content]" class="form-control" id="content" rows="7"><%= blog.content%></textarea>
            </div>
            <div class='text-center mb-3'>
                <button class="btn btn-success">update post</button>
            </div>
        </form>
    </div>
</div>
<div class="container text-center">
    <a href="/blog/<%= blog._id %>"><span class="btn btn-primary mb-3">back to the article</span></a>
</div>

<% include ../partials/footer %>