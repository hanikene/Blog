<% include ../partials/header %>

<div class="container mt-4">
    <div class='container mb-2 pt-4 pb-1 w-75 bg-light'>
        <form action="/blog" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" class="form-control" id="title" placeholder="title">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input type="text" name="blog[image]" class="form-control" id="image" placeholder="image URL">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea name="blog[content]" class="form-control" id="content" rows="7"></textarea>
            </div>
            <div class='text-center mb-3'>
                <button class="btn btn-success">new post</button>
            </div>
        </form>
    </div>
</div>
<div class="container text-center">
    <a href="/blog"><span class="btn btn-primary mb-3">back to the blog</span></a>
</div>

<% include ../partials/footer %>